@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>

<form asp-action="Login" method="post">
	<div asp-validation-summary="All"></div>

	<input type="email" asp-for="Email" placeholder="Email" class="form-control" />
	<span asp-validation-for="Email"></span>
	<br />

	<input type="password" asp-for="Password" placeholder="Password" class="form-control" />
	<span asp-validation-for="Password"></span>
	<br />

	<div class="wthree_text">
		<label class="anim">
			<input asp-for ="RememberMe" type="checkbox" required />
			<span>Keep Me Signed in</span>
		</label>
		<div class="clear"> </div>
	</div>
	<input type="submit" value="Login" class="btn btn-primary" />
</form>
<p class="text-black">Don't have an Account?<a asp-action="SignUp">SignUp Now!</a> </p>
<br />

<p class="text-black"><a asp-action="ForgetPassword">Forget Password!</a> </p>
